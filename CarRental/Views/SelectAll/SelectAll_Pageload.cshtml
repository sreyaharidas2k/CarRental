@* @model CarRental.Models.Logincls *@
@model IEnumerable<CarRental.Models.Carcls>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

<div class="container mt-5">
    <div class="row">
        @foreach (var item in Model)
        {
                <div class="col-md-4">
                    <div class="card" style="width: 18rem;">
                       <img src="@Url.Content(item.image)" class="card-img-top" alt="Car Image"> 
                        <div class="card-body">
                            <h5 class="card-title">@item.brand @item.model</h5>
                            <p class="card-text">
                                <strong>Year:</strong> @item.year<br>
                                <strong>Color:</strong> @item.color<br>
                                <strong>Number Plate:</strong> @item.numberplate<br>
                                <strong>Engine:</strong> @item.engine<br>
                                <strong>Fuel:</strong> @item.fuel<br>
                                <strong>Seat Capacity:</strong> @item.seatcapacity
                            </p>
                        <a asp-action="Rent_Pageload" asp-controller="Rent" asp-route-id="@(item.Id)" class="btn btn-primary">Book</a>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>
